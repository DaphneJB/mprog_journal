<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputActivity">

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_dark"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Title"
        android:inputType="textPersonName"
        android:padding="10dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/editContent"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:gravity="top"
        android:hint="content"
        android:inputType="text|textMultiLine"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mad"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#acdfac"
            android:onClick="moodClicked"
            app:srcCompat="@drawable/mad" />

        <ImageView
            android:id="@+id/sad"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#acdfac"
            android:onClick="moodClicked"
            app:srcCompat="@drawable/sad" />

        <ImageView
            android:id="@+id/depressive"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#acdfac"
            android:onClick="moodClicked"
            app:srcCompat="@drawable/depressive" />

        <ImageView
            android:id="@+id/great"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#acdfac"
            android:onClick="moodClicked"
            app:srcCompat="@drawable/amazing" />

        <ImageView
            android:id="@+id/happy"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#acdfac"
            android:onClick="moodClicked"
            app:srcCompat="@drawable/happy" />

        <ImageView
            android:id="@+id/funny"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#acdfac"
            android:onClick="moodClicked"
            app:srcCompat="@drawable/funny" />
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_green_dark"
        android:fontFamily="casual"
        android:onClick="submitClicked"
        android:radius="10dp"
        android:text="Submit entry!"
        android:textAllCaps="false" />
</LinearLayout>